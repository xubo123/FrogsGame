<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myself_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_light_gray" >

        <RelativeLayout
            android:id="@+id/person_name_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:src="@drawable/userlogo" />

            <TextView
                android:id="@+id/person_myname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/head"
                android:layout_toRightOf="@+id/head"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_myname_tv"
                android:layout_toRightOf="@+id/head"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:text="@string/Enter_ID"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/person_album_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/person_name_rl"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/person_album_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ofm_photo_icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_album_iv"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/myAlbum"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/person_album_rl"
            android:background="@drawable/bg_light_gray" />

        <RelativeLayout
            android:id="@+id/person_collect_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view1"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/person_collect_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ofm_collect_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_collect_iv"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/action_collection"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view11"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/person_collect_rl"
            android:background="@drawable/bg_light_gray" />

        <RelativeLayout
            android:id="@+id/person_news_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view11"
            android:background="@color/white"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/person_news_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ofm_card_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_news_iv"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/action_news"
                android:textSize="17sp" />
        </RelativeLayout>
		<View
            android:id="@+id/view111"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/person_news_rl"
            android:background="@drawable/bg_light_gray" />

        <RelativeLayout
            android:id="@+id/person_class_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view111"
            android:background="@color/white"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/person_class_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ofm_feedback_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_class_iv"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/action_class"
                android:textSize="17sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_set_rl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/person_class_rl"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/person_set_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ofm_setting_icon" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/person_set_iv"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/action_settings"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>