<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <TextView
        android:id="@+id/phoneNum_tex"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:gravity="center"
        android:text="手机号码"
        android:layout_alignTop="@+id/phoneNum_Edi"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phoneNum_Edi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_edi_change2"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/getRegisterCode_change"
        android:ellipsize="end"
        android:ems="10"
        android:hint="请输入您注册的手机号码"
        android:phoneNumber="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/getRegisterCode_change"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/phoneNum_Edi"
        android:layout_alignRight="@+id/changePassword"
        android:layout_marginTop="5dp"
        android:background="@drawable/menu_cell_background"
        android:text="获取验证码 "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView1_change"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/phoneNum_tex"
        android:layout_alignTop="@+id/checkCode_change"
        android:layout_toLeftOf="@+id/phoneNum_Edi"
        android:gravity="left|center"
        android:text="验  证  码"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/checkCode_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/getRegisterCode_change"
        android:layout_below="@+id/getRegisterCode_change"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/phoneNum_tex"
        android:ellipsize="end"
        android:ems="10"
        android:hint="请填写收到的验证码"
        android:singleLine="true" />

    <EditText
        android:id="@+id/password_edi_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkCode_change"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkCode_change"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:ems="10"
        android:hint="请填写不少于六位的新密码"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/changePassword"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password_change2"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_cell_background"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/password_change"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView1_change"
        android:layout_alignRight="@+id/textView1_change"
        android:layout_alignTop="@+id/password_edi_change"
        android:gravity="left|center"
        android:text="新  密  码"
        android:textSize="18sp" />

        <TextView
        android:id="@+id/password_change2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/password_edi_change2"
        android:gravity="center"
        android:text="确认密码"
        android:textSize="18sp" />
        
    <EditText
        android:id="@+id/password_edi_change2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/password_edi_change"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/password_change2"
        android:ellipsize="end"
        android:ems="10"
        android:hint="请再次填写新密码"
        android:inputType="textPassword"
        android:singleLine="true" />
        

</RelativeLayout>