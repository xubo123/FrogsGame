<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<EditText
        android:id="@+id/search_ed_1"
        android:layout_width="390dp"
        android:layout_height="28dp"
        android:background="@layout/edit_shape"
        android:gravity="center_horizontal"
        android:focusableInTouchMode="true"
        android:hint="搜索" 
        android:textColorHint="@color/text_hint_color"
        />

 <TextView
        android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/search_ed_1"
        android:background="@drawable/bg_light_gray" />
    <ListView
        android:id="@+id/school_list"
        android:layout_below="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:choiceMode="singleChoice">
    </ListView>
<TextView
        android:id="@+id/text3"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/school_list"
        android:background="@drawable/bg_light_gray" />
 <ProgressBar
        android:id="@+id/school_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>