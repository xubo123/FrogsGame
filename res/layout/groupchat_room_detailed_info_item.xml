<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_groupm_contacticon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/userlogo" />

    <TextView
        android:id="@+id/textView_groupm_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:text="nickname"
        android:textSize="18sp" 
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageView_groupm_authorized"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/flag_registered"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textView_groupm_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:text="signature"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

</LinearLayout>