<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="8dp" >

    <RelativeLayout
        android:layout_width="53dp"
        android:layout_height="53dp"
         >
 <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingRight="3dp" >          
        <ImageView
            android:id="@+id/iv_chaticon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/userlogo" />
    </RelativeLayout>
        <ImageView
            android:id="@+id/iv_redpoint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/redpoint"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="invisible" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            >

            <TextView
                android:id="@+id/textView_nickname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/textView_time"
                android:ellipsize="end"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="nickname"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="下午3:00"
                android:textSize="12sp" 
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/textView_nickname"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
android:ellipsize="end"/>

<TextView
    android:id="@+id/textView_latestmessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textView_nickname"
    android:paddingLeft="4dp"
     android:paddingTop="3dp"
     android:singleLine="true"
	android:ellipsize="end"
    android:text=""
    android:textColor="@android:color/darker_gray"
    android:textSize="16sp" />

        </RelativeLayout>
        
         
        
    </LinearLayout>

</LinearLayout>